<Window x:Class="DpW.AppDialogs.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DpW.AppDialogs"
        mc:Ignorable="d"
        Title="SetupWindow" Height="500" Width="275">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="Hierarchy" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="23" />
            <Separator />
        </StackPanel>
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto" Height="370" Name="scrollLevels">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Name="stackLevels" />
        </ScrollViewer>
        <StackPanel Height="30" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="30" Width="75" Content="Create" Margin="0 0 5 0" Click="CreateClick" />
            <Button Height="30" Width="150" Content="Add Level" Click="AddLevelClick" />
        </StackPanel>
    </DockPanel>
</Window>
